/* pages/manage/done.wxss */

.zz {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #000;
  opacity: 0.6;
}

.orderBox {
  width: 610rpx;
  background-color: #fff;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border-radius: 10rpx;
  box-sizing: border-box;
  padding: 0 35rpx 35rpx 35rpx;
}

.orderBTitle {
  font-size: 36rpx;
  color: #333;
  text-align: center;
  height: 114rpx;
  line-height: 114rpx;
}

.orderInfoItem {
  font-size: 28rpx;
  color: #818181;
  line-height: 58rpx;
}

.orderInfoItem text {
  color: #333;
}

.orderInfoList {
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #e1e0e0;
}

.orderDes {
  font-size: 28rpx;
  color: #828282;
  height: 63rpx;
  line-height: 63rpx;
}

.orderDes text {
  color: #050101;
  margin-right: 20rpx;
}

.bnt_ti {
  width: 400rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  background-color: #936a32;
  font-size: 32rpx;
  border-radius: 10rpx;
  margin: 0 auto;
  margin-top: 20rpx;
}

.orderClose {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 2rpx solid #666;
  color: #666;
  text-align: center;
  line-height: 40rpx;
  right: 35rpx;
  top: 20rpx;
}

.tui_item {
  margin-top: 20rpx;
  font-size: 28rpx;
  background-color: #fff;
}

.tui_title {
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #f1f1f1;
  padding: 0 25rpx;
}

.tui_title view:first-child {
  float: left;
  color: #b7b7b7;
}

.tui_title view:last-child {
  float: right;
  color: #f24242;
}

.tui_content {
  padding: 22rpx 25rpx;
}

.tui_line {
  overflow: hidden;
  line-height: 50rpx;
}

.tui_line view:first-child {
  float: left;
  color: #b7b7b7;
  width: 30%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.tui_line view:last-child {
  float: right;
  color: #333;
  width: 70%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: right;
}
