page{
  background-color: #f5f5f5;
}
.add_address{
  padding:0 30rpx;
  height: 89rpx;
  border-top: 2rpx solid #f1f1f1;
  border-bottom: 1rpx solid #f1f1f1;
  background-color: #fff;
  line-height: 89rpx;
  margin-bottom: 20rpx;
}
.add_addLeft{
  float: left;
}
.add_addLeft view{
  display: inline-block;
}
.add_icon{
  width: 40rpx;
  background-color: #f1962c;
  height: 40rpx;
  position: relative;
  border-radius: 5rpx;
  margin-right: 15rpx;
  vertical-align: middle;
}
.add_icon:before{
  width:20rpx ;
  height: 4rpx;
  background-color: #fff;
  position: absolute;
  left: 50%;
  top: 50%;
  content: "";
  transform: translate(-50%,-50%);
}
.add_icon::after{
  width:4rpx ;
  height: 20rpx;
  background-color: #fff;
  position: absolute;
  left: 50%;
  top: 50%;
  content: "";
  transform: translate(-50%,-50%);
}
.add_addLeft view:last-child{
  font-size:30rpx ;
  color: #333333;
}
.add_address .icon-right{
  float: right;
  font-size:30rpx ;
  color: #999999;
}

.order_goods_info{
  background-color: #fff;
  padding: 23rpx 30rpx;
  padding-left: 210rpx;
  height: 160rpx;
  position: relative;
}
.goods_image{
  width: 160rpx;
  height: 160rpx;
  position: absolute;
  top: 23rpx;
  left: 30rpx;
}
.goods_image image{
  width: 100%;
  height: 100%;
}
.goods_name{
  height: 50rpx;
  font-size:30rpx ;
  color: #424242;
  line-height: 50rpx;
}
.goods_range{
  font-size:26rpx ;
  color: #868585;
}
.goods_price{
  overflow: hidden;
  margin-top: 32rpx;
}

.goods_price view:first-child{
  font-size:32rpx ;
  color:#d4282d ;
  float: left;
}
.goods_price view:last-child{
  font-size:28rpx ;
  color: #424242;
  float: right;
}
.order_goods{
  margin-bottom: 20rpx;
}
.order_info{
  background-color: #fff;
}
.order_info_item{
  height: 95rpx;
  line-height:95rpx ;
  padding: 0 30rpx;
}
.order_info_item:first-child{
  border-bottom: 1px solid #f1f1f1;
}
.order_info_item view:first-child{
  float: left;
  font-size:26rpx ;
  color: #787878;
}

.order_info_item view:last-child{
  float: right;
  font-size:30rpx ;
  color: #333;
}
.buy_message{
  background-color: #fff;
  padding: 0 30rpx;
  margin-top: 20rpx;
}
.buy_message_title{
  font-size:26rpx ;
  color: #333333;
  height: 90rpx;
  line-height:90rpx ;
}
.buy_message textarea{
  font-size: 26rpx;
  height: 70rpx;
}
.fix_bottom{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 98rpx;
  line-height: 95rpx;
  background-color: #fff;
  padding-right: 260rpx;
  box-sizing: border-box;
}
.fix_left{
  border-top: 1px solid #dcdcdc;
  padding-left: 30rpx;
  font-size: 30rpx;
  color: #333333;

}
.fix_left text{
  font-size: 34rpx;
  color: #c91d1d;
  margin-left: 5rpx;
}
.fix_right{
  width:260rpx ;
  height:100% ;
  position: absolute;
  right: 0;
  top: 0;
  background-color: #fe9935;
  font-size:30rpx ;
  text-align: center;
  color:#fff; 
}
.order_address{
  border-top: 2rpx solid  #f1f1f1;
  margin-bottom: 20rpx;
  background-color: #fff;
  padding: 20rpx 30rpx;
  position: relative;
  padding-left: 100rpx;
  padding-bottom: 24rpx;
  padding-right: 135rpx;
}
.address_icon image{
  width: 38rpx;
  height:48rpx ;
}
.address_icon{
  position: absolute;
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}
.addressUserInfo{
  font-size:30rpx ;
  color: #333;
  margin-bottom: 10rpx;
}
.addressUserInfo text{
  margin-right: 50rpx;
}

.address_des{
  font-size:26rpx ;
  color: #797979;
}
.order_address .icon-right{
  font-size:32rpx ;
  color: #a2a2a2;
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}
.address_border{
  width: 100%;
  height: 4rpx;
  position: absolute;
  bottom: 0;
  left: 0;
}






