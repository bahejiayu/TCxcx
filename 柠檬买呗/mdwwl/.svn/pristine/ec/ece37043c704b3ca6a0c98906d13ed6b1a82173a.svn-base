.index_top{
  padding: 20rpx 25rpx;
  position: relative;
  padding-left: 305rpx;
  height: 58rpx;
  line-height: 58rpx;
  background-color: #0097ff;
  position: relative;

}
page{
  background-color: #ffffff;
}
.shop_item navigator{
  display: block;
  width: 100%;
  height: 100%;
}
.index_top_left{
  position: absolute;
  color: #fff;
  left: 25rpx;
}
.index_top_left view{
  display: inline-block;
  vertical-align:top;

}
.index_top_left image{
    width:22rpx ;
    height: 28rpx;
    vertical-align: text-top;
}
.index_top_left text{
  font-size: 32rpx;
  color: #fff;
  padding: 0 15rpx;
  max-width: 190rpx;
  display: inline-block;
}
.index_top_right{
  height: 58rpx;
  background-color: #fff;
  position: relative;
  border-radius: 25rpx;
  overflow: hidden;
  padding-left: 70rpx;
  padding-right: 70rpx;
}
.search_btn{
  position: absolute;
  left: 25rpx;
  top: 50%;
  transform: translateY(-48%);
  line-height: normal;
}

.search_btn image{
  width: 30rpx;
  height: 30rpx;

}
.code_btn{
    position: absolute;
    right: 20rpx;
    top: 50%;
      transform: translateY(-48%);
  line-height: normal;
}
.code_btn image{
  width:28rpx ;
  height: 28rpx;
}
.index_top_right input{
    width: 100%;
    height: 100%;
    vertical-align: middle;
    font-size: 26rpx;

}
.pclass{
  color: #a5a5a5;
}
.banner_box{
  padding: 0 25rpx;
  margin-bottom: 30rpx;
}
.bannerContainer{
  height: 310rpx;
  border-radius: 10rpx;
  overflow: hidden;
  background-color: #f4f4f4;
position: relative;
z-index: 100000;
}
.bannerContainer swiper-item{
border-radius: 10rpx;
  overflow: hidden;
}

  

.bannerContainer swiper{
  height: 100%;
}
.bannerContainer image{
  width: 100%;
  height: 100%;
}
.navContainer{
  overflow: hidden;
  /* padding-top: 30rpx; */
  background-color: #f4f4f4;
}
.navItem{
  float: left;
  width: 20%;
  background-color: #fff;
  padding-bottom: 35rpx;
}

.navItem navigator{
  display: block;
  width: 100%;
  font-size:24rpx ;
  color: #656565;
  text-align: center;
}
.navItem image{
    width:80rpx ;
    height: 80rpx;
    margin-bottom: 20rpx;
}
.shopContainer{
  background-color: #f4f4f4;
}
.shopNav{
  background-color: #fff;
  padding: 0 25rpx;
  overflow: hidden;
  padding-bottom: 10rpx;
}
.shopNav_item view{
  float: left;
  font-size: 28rpx;
  color: #666666;
  padding: 0 20rpx;
  line-height: 34rpx;
}
.shopNav_item:first-child view{
  padding-left: 0;
}
.shopNav_item view.cur{
  color: #0097ff;
 font-size: 34rpx;
}
.shop_list{
  background-color: #f4f4f4;
  padding-bottom: 50rpx;

}
.shop_item{
  background-color: #fff;
  /* border-bottom: 15rpx; */
  position: relative;
  padding: 25rpx;
  padding-right: 225rpx;
  height: 90rpx;
  /* margin-bottom: 15rpx; */
  border-bottom: 2rpx solid #f4f4f4;
}
.shop_itmeLeft{
  position: relative;
  padding-left: 112rpx;

}
.shop_itmeLeft image{
  width:90rpx ;
  height: 90rpx;
  border-radius: 10rpx;
  position: absolute;
  left: 0;
}
.shop_name{
  font-size:32rpx ;
  color:#000000 ;
  /* padding-top: 5rpx; */

}
.itemLine{
  font-size:24rpx;
color:#ababab;
float: left;
}
.shop_info{
  font-size:24rpx ;
  color: #ababab;
  margin-top: 7rpx;
}
.hbdk{
  font-size: 24rpx;
  color: #fd6906;
  padding-top: 5rpx;
}
.shop_info text{

  margin:0 20rpx; 
}
.shop_itemRight{
  position: absolute;
  right: 25rpx;
  top: 25rpx;
  font-size: 24rpx;
  color: #000000;
}
.hot_list{
  text-align: right;
  margin-top: 10rpx;

}
.hot_list image{
  width: 22rpx;
  height: 22rpx;
  margin-left: 10rpx;
}
.shop_itemRight view:first-child{
  padding-top: 10rpx;
  text-align: right;
}
.lty_{
    position: absolute;
    top: 100%;
    width: 100%;
    left: 0;
}
.lty_ image{
  width: 100%;
  height: 133rpx;
}
.rued{
  position: relative;
  height: 150rpx;
padding: 0 25rpx;
margin-bottom: 40rpx;
}
.rued image{
  width: 100%;
  height: 150rpx;

}
.rued_box{
  font-size: 28rpx;
  color: #fff;
  position: absolute;
  top: 10rpx;
  left: 50%;
  transform: translate(-50%);
}
.rued_box text{
  font-size:48rpx ;
  color: #ffd93b;
  padding: 0 10rpx;
  font-style: italic;
}





