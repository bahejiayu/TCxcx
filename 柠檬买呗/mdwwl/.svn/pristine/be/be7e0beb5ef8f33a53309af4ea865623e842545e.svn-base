.formContainer{
  padding: 0 25rpx;
}
.feedTitle{
  height: 80rpx;
  line-height: 95rpx;
  overflow: hidden;
  font-size:30rpx ;
  color:#000000 ;
}
page{
  background-color: #f4f4f4;
}
.areaBox{
  height: 350rpx;
  background-color: #fff;
  overflow: hidden;
  border-radius: 10rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  position: relative;

}
.areaBox textarea{
  width: 100%;
  height: 100%;
  font-size: 28rpx;
  padding-bottom: 30rpx;
  box-sizing: border-box;
}
.areaBox view{
  position: absolute;
  bottom: 10rpx;
  right: 20rpx;
  color: #999999;
}
.inpContainer{
  height: 100rpx;
  padding: 0 25rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 10rpx;
}
.inpContainer input{
  height: 100%;
  font-size: 28rpx;
}
.fromTip{
  font-size:22rpx ;
  color: #999999;
  margin: 20rpx 0 80rpx 0;
}





