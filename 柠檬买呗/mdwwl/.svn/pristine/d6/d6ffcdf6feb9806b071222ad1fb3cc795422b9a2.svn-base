.areaBox{
  height: 350rpx;
  background-color: #fff;
  overflow: hidden;
  border-radius: 10rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  position: relative;

}
.areaBox textarea{
  width: 100%;
  height: 100%;
  font-size: 28rpx;
  padding-bottom: 30rpx;
  box-sizing: border-box;
}
.areaBox view{
  position: absolute;
  bottom: 10rpx;
  right: 20rpx;
  color: #999999;
}
