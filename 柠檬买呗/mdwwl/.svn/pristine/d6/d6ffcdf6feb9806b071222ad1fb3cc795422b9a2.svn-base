.img_list{
  overflow: hidden;
  float: left;
}
.img_list image{
    width: 120rpx;
    height: 120rpx;
}
.img_item{
  float: left;
  margin-right: 25rpx;
  border: 2rpx dashed #0097ff;
  border-radius: 10rpx;
  position: relative;
}
.del_img{
  position: absolute;
  background-color: #0097ff;
  color: #fff;
  font-size: 26rpx;
  padding: 0 10rpx;
  opacity: 0.8;
  right: 0;
  bottom: 0;
}



